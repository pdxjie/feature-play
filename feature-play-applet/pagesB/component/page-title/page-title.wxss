image {
    width: 100%;
    height: 100%;
}

.tc {
    text-align: center;
}

.page-title {
    position: relative;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 220rpx 0 30rpx;
    font-size: 34rpx;
    font-weight: bold;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.page-title.tc {
    padding-left: 220rpx;
}

.page-icon {
    position: absolute;
    left: 0;
    height: 88rpx;
    width: 88rpx;
    text-align: center;
}

.ico-arrow {
    position: relative;
    width: 80rpx;
    height: 88rpx;
    display: inline-block;
    vertical-align: top;
}

.ico-arrow:active {
    opacity: .7;
}

.ico-arrow::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    display: block;
    width: 20rpx;
    height: 20rpx;
    margin: -10rpx 0 0 -10rpx;
    border-top: 4rpx solid #000;
}

.arrow-left::after {
    border-left: 4rpx solid #000;
    transform: rotate(-45deg);
}

.return-prev {
    padding-left: 80rpx;
}

.return-prev .ico-arrow {
    position: absolute;
    left: 0;
    top: 0;
}