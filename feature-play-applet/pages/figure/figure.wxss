/*  页面整体配置文件  */

.pages-box {
  box-sizing: border-box;
  padding: 30rpx 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0rpx 2rpx 4rpx 0rpx rgba(0, 0, 0, 0.05);
}

.inp-box {
  box-sizing: border-box;
  padding-top: 30rpx;
  position: relative;
}

.inp {
  border: 3rpx solid #ff4444;
  height: 80rpx;
  border-radius: 10rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding-left: 130rpx;
}

.inpimg {
  width: 120rpx;
  height: 74rpx;
  background-color: #f1f2f6;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  position: absolute;
  top: 33rpx;
  left: 3rpx;
}

.pagesimg {
  width: 40rpx;
  height: 40rpx;
  margin-top: 17rpx;
  margin-left: 38rpx;
}

.btn-box {
  margin-top: 30rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.btn {
  width: 200rpx;
  background-color: #ff4444;
  color: #fff;
  text-align: center;
}

.det-box {
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0rpx 2rpx 4rpx 0rpx rgba(0, 0, 0, 0.05);
}

.pg-t {
  padding: 20rpx 0rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.pglist {
  border-bottom: 1rpx solid #f0f0f0;
  box-sizing: border-box;
  padding: 20rpx 0rpx;
  display: flex;
  align-items: center;
}

.pg-l {
  display: inline-block;
  width: 30%;
}

.pg-r {
  display: inline-block;
  width: 70%;
}

.dp-n {
