page {
    background: #f7f7f7;
}

.box-input {
    background: #f6fafc;
    border-top: 1px solid #d8d8e2;
    bottom: 0;
    left: 0;
    padding: 40rpx 0;
    width: 100%;
}
/* fefefe */
.box-input .input {
    background: #fefefe;
    box-shadow: 0 0 12rpx rgba(0,0,0,.1);
    box-sizing: border-box;
    margin: 0 30rpx;
    height: 40px;
    position: relative;
    width: 690rpx;
}

.box-input .input textarea {
    border-radius: 10rpx;
    line-height: 40rpx;
    height: 40px;
    padding: 20rpx 10rpx 20rpx 20rpx;
    width: 580rpx;
}

.box-input .input .btn-send {
    align-items: center;
    background: none;
    border: none;
    border-radius: 10rpx;
    bottom: 0;
    display: flex;
    height: 80rpx;
    justify-content: center;
    padding: 0;
    position: absolute;
    right: 0;
    width: 100rpx;
    z-index: 9;
}

.box-input .input .btn-send::after {
    display: none;
}

.box-input .input .btn-send:active {
    background: #f2f2f2;
}

.box-input .input .btn-send image {
    height: 40rpx;
    width: 40rpx;
}

.page {
    background: #f7f7f7;
    bottom: 0;
    display: flex;
    flex-direction: column;
    position: absolute;
    right: 0;
}

.box-msg-list,.page {
    left: 0;
    overflow: hidden;
    top: 0;
    width: 100%;
}

.box-msg-list {
    bottom: 132rpx;
    height: 100%;
}

.box-msg-list,.list {
    box-sizing: border-box;
}

.list {
    height: auto;
    padding-bottom: 40rpx;
    width: 100%;
}

.message-group {
    background: #fff;
    border-radius: 20rpx;
    margin: 40rpx 30rpx 0;
    overflow: hidden;
}

.message {
    display: flex;
    justify-content: flex-start;
    padding: 40rpx;
}

.message.user {
    border-bottom: 2rpx solid #f6f6f6;
}

.message .text {
    color: #343541;
    font-size: 32rpx;
    line-height: 52rpx;
    overflow: hidden;
    padding: 3rpx 0;
    width: 100%;
    word-break: break-all;
}

.message .text span {
    display: inline;
}

.message .avatar {
    align-items: center;
    background: #10a37f;
    border-radius: 4rpx;
    color: #fff;
    display: flex;
    font-size: 28rpx;
    height: 48rpx;
    justify-content: center;
    margin-right: 30rpx;
    margin-top: 6rpx;
    width: 48rpx;
}

.message .avatar image,.message .avatar img {
    height: 36rpx;
    width: 36rpx;
}

.account {
    align-items: center;
    border-radius: 10rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    margin: 20rpx 30rpx;
    padding: 16rpx 24rpx;
}

.account .balance {
    color: #666;
    font-size: 24rpx;
}

.account .balance text {
    color: #10a37f;
    margin-right: 6rpx;
}

.account .btn-pay {
    color: #10a37f;
    display: inline-block;
    font-size: 24rpx;
    margin-left: 20rpx;
}

.banner-ad {
    border-top: 2rpx solid #ddd;
    height: 120rpx;
    width: 100%;
}

.cursor {
    animation: cursor .6s infinite;
    background: #3d3d3d;
    border-left: .1em solid transparent;
    display: inline-block;
    height: 40rpx;
    line-height: 100%;
    position: relative;
    top: 6rpx;
    width: 100%;
    width: 10rpx;
}

@keyframes cursor {
    50% {
        background: #fff;
    }
}

.content {
    padding: 20rpx;
}

.content view {
    color: #444;
    font-size: 28rpx;
    line-height: 1.5;
    margin: 10rpx 0;
    word-break: break-all;
}

.content img {
    width: 100%;
}

.btn-copy {
    color: #409eff;
}