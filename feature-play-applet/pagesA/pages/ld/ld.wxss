.standby {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ccc;
}

.incoming {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.incoming::before {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(25,61,77,1);
}

.incoming-from,.get-through-information {
  position: relative;
  z-index: 1;
  text-align: center;
  color: #fff;
}

.caller {
  font-size: 61rpx;
}

.address,.time {
  margin-top: 41rpx;
  font-size: 33rpx;
}

.incoming-action {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0 36rpx;
}

.remind-message,.reject-answer {
  display: flex;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}

.remind-message {
  display: flex;
  justify-content: space-around;
  align-content: center;
}

.remind-message>view {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  text-align: center;
}

.remind-message>view image {
  height: 36rpx;
  margin-bottom: 17rpx;
}

.remind-message>view image:nth-of-type(1) {
  width: 36rpx;
}

.remind-message>view image:nth-of-type(2) {
  width: 40rpx;
}

.reject-answer {
  display: flex;
  justify-content: space-around;
  margin-top: 89rpx;
  margin-bottom: 125rpx;
}

.reject-answer>view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.reject-answer>view image {
  width: 146rpx;
  height: 146rpx;
  margin-bottom: 17rpx;
}

.get-through {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(25,61,77,1);
  display: none;
}

.get-through.show {
  display: block;
}

.get-through-action {
  position: absolute;
  left: 0;
  right: 0;
}

.get-through-action-list {
  height: 470rpx;
  padding: 30rpx;
}

.row-list {
  display: flex;
  justify-content: space-around;
  align-content: center;
}

.row-list>view {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #fff;
}

.row-list>view image {
  width: 150rpx;
  height: 148rpx;
  margin-bottom: 16rpx;
}

.hung-up {
  display: flex;
  justify-content: center;
  align-content: center;
  bottom: 0;
  width: 100%;
  z-index: 1;
}

page {
  height: 100%;
  margin-top: 0!important;
}

.hung-up cover-image {
  width: 146rpx;
  height: 146rpx;
  margin: 200rpx 0 160rpx;
}

.submit-template-message {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 350rpx;
  opacity: 0;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background: #f6f3ec;
}

.bottom-wrapper {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bottom-wrapper .tip {
  margin-top: 10rpx;
  font-size: 80%;
  color: grey;
}

.botttom-item {
  width: 100%;
  margin-top: 40rpx;
  padding: 22rpx 0;
  font-size: 36rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 1rpx solid rgba(5,5,5,0.1);
  color: #fff;
}

.bgB9B9C9 {
  background: #ebad47;
}

.bg2CB300 {
  background: #1aad19;
}

.bgFF7272 {
  background: #f8f8f8;
  color: #333;
}

.fullscreen {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}